<!-- Generic admin page -->
<div class="container-fluid">
	<div class="row-fluid">
		<div class="span12 well">
			<div class="span6">
				<div class="page-header">
					<h3><%= t(:admin, :scope => [:views, :pages, :admin]) %></h3>
				</div>
				<%= t(:welcome, :user => current_user.company, :scope => [:views, :pages, :admin]) %>
			</div>
			<div class="span6">
				site stats
			</div>
		</div>
	</div>
	<div class="row-fluid">
		<% [:users, :categories].each do |segment| %>
			<div class="span6 well">
				<div class="page-header">
					<%= t(segment, :scope => [:views, :pages, :admin]) %>
				</div>
				<%= render "pages/partials/#{segment.to_s}", :categories => @roots %>
			</div>
		<% end # each segment %>
	</div>
</div>

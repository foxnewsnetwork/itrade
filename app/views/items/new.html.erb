<!-- new item page -->
<div class="container-fluid">
	<div class="row-fluid">
		<div class="span12 well">
			<%= form_for @item do |f| %>
				<fieldset>
					<legend><%= t(:new_item_form) %></legend>
					<div class="control-group">
						<% [:title,:description].each do |tag| %>
							<%= f.label tag, :class => "control-label" %>
							<%= f.text_field tag, :value => "" %>
						<% end %>
						<div class="inline">
							<%= f.label :quantity, :class => "control-label" %>
							<%= f.number_field :quantity %>
							<%= f.select :units, options_for_select(['grams','kilograms','pounds','tons','metric tons'].map { |x| [x,x] } ) %>
						</div>
						<%= content_tag(:button, t(:submit), :class => "btn btn-primary", :type => "submit" ) %>
					</div>
				</fieldset>
			<% end %>
		</div>
	</div>
</div>

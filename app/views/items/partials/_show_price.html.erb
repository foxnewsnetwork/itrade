<!-- show prices partial -->
<div class="page-header">
	<% if @item.user == current_user && @bids.empty? %>
			<%= content_tag(:button, :class => "btn btn-info", :id => "open-bid-button", :placement => "top") do %>
				<%= content_tag(:i, "", :class => "icon-plus-sign icon-white") %>
				<%= content_tag(:i, "", :class => "icon-flag icon-white") %>
				<%= t(:initial_price, :scope => [:views, :bids, :forms, :new]) %>
			<% end # button tag %>
	<% else %>
		<h3><%= t(:bids, :scope => [:views, :bids, :show]) %></h3>
	<% end # else not signed in %>
</div>
<%= render "bids/partials/index" %>



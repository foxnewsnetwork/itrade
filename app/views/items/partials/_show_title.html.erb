<!-- Show title bar -->
<div class="span4">
	<div class="page-header">
		<h4>
			<i class="icon-user"></i> <%= link_to @item.user.company.capitalize, user_path( @item.user ) %>    &raquo;    
			<i class="icon-tag" ></i> <%= @item.title.capitalize %>
		</h4>
	</div>	
</div>
<div class="span4">
	<% if @item.user == current_user %>
		<% done = 1 + (@elements.empty? ? 0 : 1) + (@bids.empty? || @bids.first.location.nil? ? 0 : 1) %>
		<% left = {} %>
		<% left[:element] = "open-element-button" if @elements.empty? %>
		<% left[:bid] = "open-bid-button" if @bids.empty? || @bids.first.location.nil? %>
		<%= render "shared/almost_complete", :done => done, :left => left %>
	<% end # if correct user %>
</div>
<div class="span4">
	<h4>
	</h4>
</div>

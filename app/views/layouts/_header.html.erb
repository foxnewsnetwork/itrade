<header>
	<div class="navbar navbar-fixed-top">
		<div class="container-fluid">
			<div class="subnav">		
				<ul class="nav nav-pills">
					<li>
						<%= link_to( image_tag("http://placehold.it/150x30") , "#") %>
					</li>
					<% { "user" => t(:me) ,"shopping-cart" => t(:buy), "gift" => t(:sell) }.each do |icon, tab| %>
						<li>
							<a href="#"><i class="<%= "icon-#{icon}" %>"></i> <%= tab %></a>
						</li>
					<% end %>
					<li>
						<%= form_tag "#", :class => "subnav-search pull-left" do %>
							<%= text_field_tag :navbarsearch, "", :class => "search-query", :placeholder => "Search" %>
						<% end %>
					</li>
				</ul>
			</div>
		</div>
	</div>
</header>

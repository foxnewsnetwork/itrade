<!-- new bid page -->
<div class="container-fluid">
	<div class="row-fluid">
		<div class="span12 well">
			<div class="page-header">
				<h4>
					<i class="icon-user"></i> <%= link_to @item.title.capitalize, item_path( @item ) %> &raquo;
					<i class="icon-tag" ></i> <%= t(:bid) %>
				</h4>
			</div>
		</div>
	</div>
	<div class="row-fluid">
		<div class="span4 well">
			<%= render "bids/partials/new", :remote => false %>
		</div>
		<div class="span8 well">
			<div class="span12-fluid">
				<div class="page-header">
					<h4><i class="icon-tags" ></i> <%= t(:bids_info) %></h4>
				</div>
			</div>
			<% if @bids.nil? %>
				<%= t(:no_bid_history) %>
			<% else # if no bids %>
				<dl>
					<% last = @bids.last %>
					<dt><%= t(:last_bid) %></dt>
					<% if last.nil? %>
						<dd><%= t(:nothing_yet) %></dd>
					<% else %>
						<dd><%= last.offer %> <%= last.units %></dd>
						<% location = last.location %>
					<% end %>
					
					
					<dt><%= t(:target) %></dt>
					<% unless location.nil? %>
						<dd><%= location.shipping %> <%= location.city %></dd>
					<% else %>
						<dd><%= t(:unknown) %></dd>
					<% end %>
					
					<dt><%= t(:bid_count) %></dt>
					<dd><%= @bids.count %></dd>
				</dl>
			<% end # else bids %>
		</div>
	</div>
</div>

<!-- escrow form -->
<fieldset>
	<legend><%= t(:insurance, :scope => [:views, :bids, :forms, :new]) %></legend>
	<%= label_tag "service[id]", t(:insurance, :scope => [:views, :bids, :forms, :labels]), :class => "control-label" %>
	<%= select_tag( "service[id]", options_for_select([[@service.title, @service.id]]), :include_blank => true ) %>
	<table>
		<thead>
			<tr>
				<% [:start, :finish, :containers, :cost].each do |head| %>
					<th><%= t(head, :scope => [:views, :services, :forms, :labels]) %></th>
				<% end # each head %>
			</tr>
		</thead>
		<tbody>
			<tr>
				<% [:start, :finish, :containers, :cost].each do |head| %>
					<%= content_tag(:td, :id => "td-#{head.to_s}") do %>
						<%= t(:now_loading) %>
					<% end # td %>
				<% end # each head %>
			</tr>
		</tbody>
	</table>	
</fieldset>
